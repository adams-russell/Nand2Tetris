/*
* Russell Adams
* CS 201
*/

#include <iostream>
#include <string>

using namespace std;

int candies, moves = 0;
std::string cont;

void menu();
void solve(int number, int &count);

int main() {
	//Take in initial number of candies
	menu();
	while (true) {
		solve(candies, moves);
		moves = 0;
		std::cout << "Would you like to play again? (Y/y) or (N/n)\n";
		std::cin >> cont;
		if (cont == "Y" or cont == "y") {
			menu();
		}
		else {
			exit(1);
		}
	}
	

	return 0;
}

void menu() {
	while (true) {
		std::cout << "How many candies?" << std::endl;
		std::cin >> candies;
		if (candies > 10000 or candies < 0) {
			std::cout << "Your candy count can neither be less than 0 nor exceed 10,000" << std::endl;
			continue;
		}
		break;
	}
}
void solve(int number, int &count) {
	if ((number + 23) % 2 == 0) {
		std::cout << "From " << number << " add 23 to get " << number + 23 << std::endl;
		number += 23;
	}
	else if (number % 2 == 0) {
		std::cout << "From " << number << " divide by 2 to get " << number / 2 << std::endl;
		number = number / 2;
	}
	else if ((number + (number / 3)) % 2 == 0 and number + 23 % 2 != 0) {
		std::cout << "From " << number << " add 1/3 of " << number << " to get " << number + (number /3) << std::endl;
		number = number + (number / 3);
	}
	count += 1;
	if (count < 20 and number != 17 ){
		solve(number, count);
	}
	else if (count = 20 and number != 17) {
		std::cout << "No solution within 20 moves\n";
		return;
	}
}
